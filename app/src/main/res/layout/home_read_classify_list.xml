<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp">


    <!--  好像无用了  5/4号  -->

    <ImageView
        android:id="@+id/home_read_classify_carboon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/community_course"/>

    <TextView
        android:id="@+id/home_read_classify_look"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:text="热度：95485"
        android:textColor="@android:color/holo_blue_light"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/home_read_classify_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_read_classify_carboon"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/home_read_classify_table"
        android:background="@color/black"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="类型"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/home_read_classify_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_read_classify_carboon"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="10dp"
        android:background="@color/black"
        android:paddingEnd="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingStart="5dp"
        android:text="标签"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</RelativeLayout>
