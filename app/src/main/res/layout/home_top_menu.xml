<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:id="@+id/find_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:visibility="visible">


        <Button
            android:id="@+id/home_menu_record"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:drawableLeft="@drawable/home_menu_history"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"/>

        <RadioGroup
            android:id="@+id/rg_second_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_three_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/creation"
                android:textColor="@color/white"
                />

            <RadioButton
                android:id="@+id/rb_three_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:button="@null"
                android:text="@string/read"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/read_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/collect"
                android:textColor="@color/white"/>


        </RadioGroup>

        <Button
            android:id="@+id/home_menu_seek"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/rg_second_menu"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/rg_second_menu"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableEnd="@drawable/home_menu_seek"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            />
    </RelativeLayout>

    <!--<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/home_menu_layout"
                android:scrollbars="none">-->

        <FrameLayout
            android:id="@+id/fhome_menu"
            android:layout_below="@+id/find_menu_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <!--</ScrollView>-->



</RelativeLayout>

