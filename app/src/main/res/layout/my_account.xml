<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/my_login"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:visibility="visible">

                <com.timi.framedemo.Utils.CircleImageView
                    android:id="@+id/my_login_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginStart="25dp"
                    android:src="@drawable/store_4"/>

                <TextView
                    android:id="@+id/my_login_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/my_login_button"
                    android:layout_marginLeft="17dp"
                    android:layout_marginStart="17dp"
                    android:layout_marginTop="9dp"
                    android:layout_toEndOf="@+id/my_login_button"
                    android:layout_toRightOf="@+id/my_login_button"
                    android:text="@string/login"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/my_login_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/my_login_text"
                    android:layout_alignStart="@+id/my_login_text"
                    android:layout_below="@+id/my_login_text"
                    android:layout_marginTop="5dp"
                    android:text="登录更安全,可同步浏览创作信息"/>
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/my_login_succeed"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="24dp"
                android:background="@color/deep_purple"
                android:visibility="gone">

                <TextView
                    android:id="@+id/my_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"
                    android:text="@string/information"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/my_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:padding="3dp"
                    android:text="@string/sign"
                    android:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/myReadMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/myIntegral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"/>

                    <TextView
                        android:id="@+id/mySpaceMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:singleLine="false"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.timi.framedemo.Utils.CircleImageView
                        android:id="@+id/user_background"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_alignParentBottom="false"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="20dp"
                        android:contentDescription="@string/Logo"
                        android:src="@drawable/my_1"/>


                    <!-- 可以设置半透明  -->
                    <TextView
                        android:id="@+id/my_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/user_background"
                        android:layout_centerInParent="true"
                        android:background="@color/black"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingStart="8dp"
                        android:text="@string/user"
                        android:textColor="@color/orange"/>

                    <TextView
                        android:id="@+id/my_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/user_background"
                        android:layout_alignTop="@+id/user_background"
                        android:textColor="@color/orange"
                        android:textSize="20sp"/>
                </RelativeLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:background="@color/gray">


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_VIP"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/myVIP"/>

                    <TextView
                        android:id="@+id/my_VIP_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:gravity="end"
                        android:text="@string/xxxx"
                        android:textColor="@color/orange"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/my_VIP_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    style="@style/my_account_FLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/my_wallet"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/myWallet"/>

                    <TextView
                        android:id="@+id/my_wallet_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="35dp"
                        android:layout_marginRight="35dp"
                        android:text="@string/my_coffers"
                        android:textColor="@color/orange"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/my_wallet_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_store"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/store"/>

                    <TextView
                        android:id="@+id/my_store_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    style="@style/my_account_FLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_integral"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/creditsExchange"/>

                    <TextView
                        android:id="@+id/my_integral_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_post"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_post"/>

                    <TextView
                        android:id="@+id/my_post_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_circle"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/my_circle"/>

                    <TextView
                        android:id="@+id/my_circle_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    style="@style/my_account_FLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_attention"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/myAttention"/>

                    <TextView
                        android:id="@+id/my_attention_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"
                        />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/participation_works"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/participation_works"/>

                    <TextView
                        android:id="@+id/participation_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_collect"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/myCollect"/>

                    <TextView
                        android:id="@+id/my_collect_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    style="@style/my_account_FLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/browse_history"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/browse_history"/>

                    <TextView
                        android:id="@+id/browse_history_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>



                <!--<FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_diary"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/myDiary"/>

                    <TextView
                        android:id="@+id/my_diary_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>-->

               <!-- <FrameLayout
                    style="@style/my_account_FLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <TextView
                        android:id="@+id/my_compile"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/editor"/>

                    <TextView
                        android:id="@+id/my_compile_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>-->

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/my_set"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/systemSet"/>

                    <TextView
                        android:id="@+id/my_set_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/my_help"
                        style="@style/my_account_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/helpAndFeedback"/>


                    <TextView
                        android:id="@+id/my_help_jump"
                        style="@style/my_account_menu_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/more"/>
                </FrameLayout>

            </LinearLayout>
        </LinearLayout>
</ScrollView>