        <Button
            android:id="@+id/find_menu_seek"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignEnd="@+id/rg_find_menu"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignRight="@+id/rg_find_menu"
            android:layout_centerInParent="true"
            android:background="@null"
            android:drawableEnd="@drawable/home_menu_seek"
            android:padding="2dp"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"/>

        <RadioGroup
            android:id="@+id/rg_find_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_find_world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/world"
                android:textColor="@color/white"
                />

            <RadioButton
                android:id="@+id/rb_find_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginStart="10dp"
                android:button="@null"
                android:text="@string/circle"
                android:textColor="@color/white"/>

            <RadioButton
                android:id="@+id/rb_find_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@null"
                android:text="@string/attention"
                android:textColor="@color/white"/>


        </RadioGroup>

    </RelativeLayout>


