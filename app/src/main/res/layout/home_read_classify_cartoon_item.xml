<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/classify_cartoon_logo"
        android:layout_width="170dp"
        android:layout_height="110dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_read_classify_logo_1"/>

    <TextView
        android:id="@+id/classify_cartoon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/classify_cartoon_logo"
        android:layout_toRightOf="@+id/classify_cartoon_logo"
        android:text="怦然心动"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/classify_cartoon_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/classify_cartoon_name"
        android:layout_toRightOf="@+id/classify_cartoon_logo"
        android:text="冬瓜"/>

    <TextView
        android:id="@+id/classify_cartoon_clickGood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/classify_cartoon_logo"
        android:layout_toEndOf="@+id/classify_cartoon_logo"
        android:layout_toRightOf="@+id/classify_cartoon_logo"
        android:text="点赞 666"/>

    <TextView
        android:id="@+id/calssify_cartoon_browse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/classify_cartoon_logo"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/classify_cartoon_clickGood"
        android:layout_toRightOf="@+id/classify_cartoon_clickGood"
        android:text="66万"/>
</RelativeLayout>
