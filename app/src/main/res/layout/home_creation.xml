<?xml version="1.0" encoding="utf-8"?>



<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <fragment
                android:id="@+id/fhome_creation_logo"
                android:name="com.timi.framedemo.activity.home.HomeCreationLogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/home_create_cartoon"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_toLeftOf="@+id/home_create_fiction"
                    android:text="创建漫画"
                    />

                <Button
                    android:id="@+id/home_create_fiction"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:text="创建剧本"
                    />

                <Button
                    android:id="@+id/home_create_update"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_toEndOf="@+id/home_create_fiction"
                    android:layout_toRightOf="@+id/home_create_fiction"
                    android:text="更新"
                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:text="为您推荐"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/create_more_but"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/read_more"/>


            </RelativeLayout>

            <fragment
                android:id="@+id/fhome_create_cartoon"
                android:name="com.timi.framedemo.activity.home.CreateList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>
    </ScrollView>


